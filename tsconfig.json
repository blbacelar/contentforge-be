{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "pdf-parse"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*"],

  "exclude": ["node_modules"]
} 